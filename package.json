{
  "name": "require-check",
  "version": "1.0.0",
  "description": "Checks that a given module is able to be required without any errors occurring.",
  "repository": {
    "type": "git",
    "url": "https://github.com/reggi/node-require-check.git"
  },
  "license": "ISC",
  "author": "Thomas Reggi",
  "main": "./build/require_check.js",
  "bin": "./build/require_check_cli.js",
  "scripts": {
    "build": "rm -rf ./build/ && tsc",
    "coverage:open": "open ./coverage/index.html",
    "lint:check": "gts check",
    "lint:fix": "gts fix",
    "open:coverage": "npm run coverage:open",
    "sortme": "npx sort-package-json",
    "test": "mocha --check-leaks --forbid-pending --exit --timeout=3000 -r ts-node/register \"src/**/*_test.ts\"",
    "test:coverage": "nyc --reporter=html --reporter=text --reporter=text-summary npm test && npm run open:coverage",
    "test:coverage-ci": "nyc npm test",
    "ts-node": "ts-node"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@types/mock-fs": "^4.10.0",
    "@types/node": "^14.0.22",
    "@types/sinon": "^9.0.4",
    "chai": "^4.2.0",
    "eslint": "^6.0.0",
    "gts": "^2.0.2",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=11.14.0"
  }
}
